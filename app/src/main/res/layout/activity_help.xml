<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarSize="?android:attr/scrollbarSize"
    android:scrollbarStyle="insideInset"
    tools:context="com.coder.hiredrivercustomer.help">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.android_examples.com.scrollviewvertical.MainActivity"
        android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/editText2"
        android:layout_width="335dp"
        android:layout_height="107dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Help"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/multiAutoCompleteTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:maxLength="10"
        tools:text="Help" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView"
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:padding="@dimen/fab_margin"
            android:text="        HireDriver match you with the specific driver."
            android:textSize="20sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="149dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="320dp"
        android:layout_height="145dp"
        android:padding="@dimen/fab_margin"
        android:text="          When you request a ride, your app send your request to nearby drivers to pick up you at your pickup location. "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="251dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView4"
        android:layout_width="320dp"
        android:layout_height="178dp"
        android:padding="@dimen/fab_margin"
        android:text="           Ratings allow us to ensure a great experience for both riders and drivers. We take ratings very seriously. Drivers with low ratings may lose access to the HireDriver app."
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="408dp" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView5"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="@dimen/fab_margin"
            android:text="              Certain issues are not drivers fault, so when they are selected as the reasons for a low rating, the trip will not count toward your drivers overall rating."
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="601dp" />

        <MultiAutoCompleteTextView
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="@dimen/fab_margin"
            android:layout_width="320dp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="601dp"
            android:text="           Additional charges may apply to your trip, including tolls, surcharges, or other fees. These charges are automatically added to your trip fare." />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
